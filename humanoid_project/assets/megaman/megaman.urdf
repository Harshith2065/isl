<?xml version="1.0"?>
<robot name="simple_humanoid">

  <!-- pelvis / base -->
  <link name="pelvis">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="10.0"/>
      <inertia ixx="0.2" ixy="0.0" ixz="0.0" iyy="0.2" iyz="0.0" izz="0.2"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.20 0.15 0.10"/></geometry>
      <material name="grey"><color rgba="0.6 0.6 0.6 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.20 0.15 0.10"/></geometry>
    </collision>
  </link>

  <!-- torso -->
  <link name="torso">
    <inertial>
      <origin xyz="0 0 0.12" rpy="0 0 0"/>
      <mass value="8.0"/>
      <inertia ixx="0.15" ixy="0.0" ixz="0.0" iyy="0.15" iyz="0.0" izz="0.15"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.12" rpy="0 0 0"/>
      <geometry><box size="0.25 0.15 0.24"/></geometry>
      <material name="blue"><color rgba="0.2 0.4 0.8 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0 0 0.12"/>
      <geometry><box size="0.25 0.15 0.24"/></geometry>
    </collision>
  </link>

  <!-- neck and head -->
  <link name="neck">
    <inertial><mass value="0.2"/><origin xyz="0 0 0"/><inertia ixx="0.001" iyy="0.001" izz="0.001"/></inertial>
    <visual><origin xyz="0 0 0"/><geometry><cylinder radius="0.03 length="0.04"/></geometry></visual>
    <collision><origin xyz="0 0 0"/><geometry><cylinder radius="0.03 length="0.04"/></geometry></collision>
  </link>

  <link name="head">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="3.0"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.02"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.10" rpy="0 0 0"/>
      <geometry><sphere radius="0.10"/></geometry>
      <material name="skin"><color rgba="0.9 0.75 0.6 1.0"/></material>
    </visual>
    <collision>
      <origin xyz="0 0 0.10"/>
      <geometry><sphere radius="0.10"/></geometry>
    </collision>
  </link>

  <!-- Right arm chain: shoulder -> upper -> elbow -> lower -> wrist -> palm -->
  <link name="r_shoulder"/>
  <link name="r_upperarm">
    <inertial><mass value="1.0"/><origin xyz="0 0 -0.12"/><inertia ixx="0.01" iyy="0.01" izz="0.01"/></inertial>
    <visual><origin xyz="0 0 -0.12"/><geometry><cylinder length="0.24" radius="0.04"/></geometry></visual>
    <collision><origin xyz="0 0 -0.12"/><geometry><cylinder length="0.24" radius="0.04"/></geometry></collision>
  </link>

  <link name="r_lowerarm">
    <inertial><mass value="0.8"/><origin xyz="0 0 -0.12"/><inertia ixx="0.008" iyy="0.008" izz="0.008"/></inertial>
    <visual><origin xyz="0 0 -0.12"/><geometry><cylinder length="0.22" radius="0.035"/></geometry></visual>
    <collision><origin xyz="0 0 -0.12"/><geometry><cylinder length="0.22" radius="0.035"/></geometry></collision>
  </link>

  <link name="r_hand">
    <inertial><mass value="0.2"/><origin xyz="0 0 0"/><inertia ixx="0.0005" iyy="0.0005" izz="0.0005"/></inertial>
    <visual><origin xyz="0 0 0"/><geometry><sphere radius="0.05"/></geometry></visual>
    <collision><origin xyz="0 0 0"/><geometry><sphere radius="0.05"/></geometry></collision>
  </link>

  <!-- Left arm chain (mirrored) -->
  <link name="l_shoulder"/>
  <link name="l_upperarm" />
  <link name="l_lowerarm" />
  <link name="l_hand" />

  <!-- Right leg chain: hip -> thigh -> knee -> calf -> ankle -> foot -->
  <link name="r_hip"/>
  <link name="r_thigh">
    <inertial><mass value="3.0"/><origin xyz="0 0 -0.18"/><inertia ixx="0.03" iyy="0.03" izz="0.03"/></inertial>
    <visual><origin xyz="0 0 -0.18"/><geometry><cylinder length="0.36" radius="0.06"/></geometry></visual>
    <collision><origin xyz="0 0 -0.18"/><geometry><cylinder length="0.36" radius="0.06"/></geometry></collision>
  </link>
  <link name="r_calf">
    <inertial><mass value="2.5"/><origin xyz="0 0 -0.18"/><inertia ixx="0.02" iyy="0.02" izz="0.02"/></inertial>
    <visual><origin xyz="0 0 -0.18"/><geometry><cylinder length="0.36" radius="0.055"/></geometry></visual>
    <collision><origin xyz="0 0 -0.18"/><geometry><cylinder length="0.36" radius="0.055"/></geometry></collision>
  </link>
  <link name="r_foot">
    <inertial><mass value="0.6"/><origin xyz="0.1 0 -0.03"/><inertia ixx="0.003" iyy="0.003" izz="0.003"/></inertial>
    <visual><origin xyz="0.1 0 -0.03"/><geometry><box size="0.22 0.10 0.06"/></geometry></visual>
    <collision><origin xyz="0.1 0 -0.03"/><geometry><box size="0.22 0.10 0.06"/></geometry></collision>
  </link>

  <!-- Left leg - mirrored -->
  <link name="l_hip"/>
  <link name="l_thigh"/>
  <link name="l_calf"/>
  <link name="l_foot"/>

  <!-- JOINTS -->
  <!-- pelvis -> torso (torso pitch/roll) -->
  <joint name="pelvis_to_torso" type="revolute">
    <parent link="pelvis"/>
    <child link="torso"/>
    <origin xyz="0 0 0.08" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.7" upper="0.7" effort="200" velocity="1.5"/>
  </joint>

  <!-- torso -> neck -->
  <joint name="torso_to_neck" type="revolute">
    <parent link="torso"/>
    <child link="neck"/>
    <origin xyz="0 0 0.24" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.7" upper="0.7" effort="50" velocity="1.5"/>
  </joint>

  <!-- neck -> head -->
  <joint name="neck_to_head" type="revolute">
    <parent link="neck"/>
    <child link="head"/>
    <origin xyz="0 0 0.06" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.6" upper="0.6" effort="50" velocity="2.0"/>
  </joint>

  <!-- Right arm chain -->
  <joint name="torso_to_r_shoulder" type="revolute">
    <parent link="torso"/>
    <child link="r_shoulder"/>
    <origin xyz="0 0.12 0.18" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.5" upper="1.5" effort="60" velocity="2.0"/>
  </joint>

  <joint name="r_shoulder_to_upper" type="revolute">
    <parent link="r_shoulder"/>
    <child link="r_upperarm"/>
    <origin xyz="0 0 -0.02" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.7" upper="1.7" effort="60" velocity="2.0"/>
  </joint>

  <joint name="r_elbow" type="revolute">
    <parent link="r_upperarm"/>
    <child link="r_lowerarm"/>
    <origin xyz="0 0 -0.24" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="2.0" effort="50" velocity="3.0"/>
  </joint>

  <joint name="r_wrist" type="revolute">
    <parent link="r_lowerarm"/>
    <child link="r_hand"/>
    <origin xyz="0 0 -0.22" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5" upper="1.5" effort="30" velocity="4.0"/>
  </joint>

  <!-- Left arm mirror (same ranges) -->
  <joint name="torso_to_l_shoulder" type="revolute">
    <parent link="torso"/>
    <child link="l_shoulder"/>
    <origin xyz="0 -0.12 0.18" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.5" upper="1.5" effort="60" velocity="2.0"/>
  </joint>

  <joint name="l_shoulder_to_upper" type="revolute">
    <parent link="l_shoulder"/>
    <child link="l_upperarm"/>
    <origin xyz="0 0 -0.02" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.7" upper="1.7" effort="60" velocity="2.0"/>
  </joint>

  <joint name="l_elbow" type="revolute">
    <parent link="l_upperarm"/>
    <child link="l_lowerarm"/>
    <origin xyz="0 0 -0.24" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="2.0" effort="50" velocity="3.0"/>
  </joint>

  <joint name="l_wrist" type="revolute">
    <parent link="l_lowerarm"/>
    <child link="l_hand"/>
    <origin xyz="0 0 -0.22" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5" upper="1.5" effort="30" velocity="4.0"/>
  </joint>

  <!-- Right leg chain -->
  <joint name="pelvis_to_r_hip" type="revolute">
    <parent link="pelvis"/>
    <child link="r_hip"/>
    <origin xyz="0 0.08 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.0" effort="200" velocity="2.0"/>
  </joint>

  <joint name="r_hip_to_thigh" type="revolute">
    <parent link="r_hip"/>
    <child link="r_thigh"/>
    <origin xyz="0 0 -0.04" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5" upper="1.0" effort="150" velocity="2.0"/>
  </joint>

  <joint name="r_knee" type="revolute">
    <parent link="r_thigh"/>
    <child link="r_calf"/>
    <origin xyz="0 0 -0.36" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="2.0" effort="200" velocity="3.0"/>
  </joint>

  <joint name="r_ankle" type="revolute">
    <parent link="r_calf"/>
    <child link="r_foot"/>
    <origin xyz="0 0 -0.36" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.8" upper="0.8" effort="100" velocity="3.0"/>
  </joint>

  <!-- Left leg mirror -->
  <joint name="pelvis_to_l_hip" type="revolute">
    <parent link="pelvis"/>
    <child link="l_hip"/>
    <origin xyz="0 -0.08 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.0" effort="200" velocity="2.0"/>
  </joint>

  <joint name="l_hip_to_thigh" type="revolute">
    <parent link="l_hip"/>
    <child link="l_thigh"/>
    <origin xyz="0 0 -0.04" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5" upper="1.0" effort="150" velocity="2.0"/>
  </joint>

  <joint name="l_knee" type="revolute">
    <parent link="l_thigh"/>
    <child link="l_calf"/>
    <origin xyz="0 0 -0.36" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="2.0" effort="200" velocity="3.0"/>
  </joint>

  <joint name="l_ankle" type="revolute">
    <parent link="l_calf"/>
    <child link="l_foot"/>
    <origin xyz="0 0 -0.36" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.8" upper="0.8" effort="100" velocity="3.0"/>
  </joint>

</robot>
