<?xml version="1.0"?>
<robot name="simple_humanoid">

  <!-- ===================== BASE LINK ===================== -->
  <link name="base_link">
    <inertial>
      <mass value="10.0"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.2 0.5"/>
      </geometry>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.2 0.5"/>
      </geometry>
    </collision>
  </link>

  <!-- ===================== HEAD ===================== -->
  <link name="head">
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01"/>
    </inertial>
    <visual>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="skin">
        <color rgba="1 0.8 0.6 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- ===================== LIMBS ===================== -->
  <!-- Upper arms -->
  <link name="left_upper_arm">
    <inertial><mass value="1"/><inertia ixx="0.01" iyy="0.01" izz="0.01"/></inertial>
    <visual>
      <geometry><cylinder length="0.25" radius="0.04"/></geometry>
      <material name="blue"><color rgba="0 0 1 1"/></material>
    </visual>
    <collision><geometry><cylinder length="0.25" radius="0.04"/></geometry></collision>
  </link>

  <link name="right_upper_arm">
    <inertial><mass value="1"/><inertia ixx="0.01" iyy="0.01" izz="0.01"/></inertial>
    <visual>
      <geometry><cylinder length="0.25" radius="0.04"/></geometry>
      <material name="red"><color rgba="1 0 0 1"/></material>
    </visual>
    <collision><geometry><cylinder length="0.25" radius="0.04"/></geometry></collision>
  </link>

  <!-- Lower arms -->
  <link name="left_lower_arm">
    <inertial><mass value="0.8"/><inertia ixx="0.01" iyy="0.01" izz="0.01"/></inertial>
    <visual>
      <geometry><cylinder length="0.25" radius="0.03"/></geometry>
      <material name="cyan"><color rgba="0 1 1 1"/></material>
    </visual>
    <collision><geometry><cylinder length="0.25" radius="0.03"/></geometry></collision>
  </link>

  <link name="right_lower_arm">
    <inertial><mass value="0.8"/><inertia ixx="0.01" iyy="0.01" izz="0.01"/></inertial>
    <visual>
      <geometry><cylinder length="0.25" radius="0.03"/></geometry>
      <material name="pink"><color rgba="1 0.6 0.6 1"/></material>
    </visual>
    <collision><geometry><cylinder length="0.25" radius="0.03"/></geometry></collision>
  </link>

  <!-- Legs -->
  <link name="left_leg">
    <inertial><mass value="2"/><inertia ixx="0.02" iyy="0.02" izz="0.02"/></inertial>
    <visual>
      <geometry><cylinder length="0.35" radius="0.05"/></geometry>
      <material name="green"><color rgba="0 1 0 1"/></material>
    </visual>
    <collision><geometry><cylinder length="0.35" radius="0.05"/></geometry></collision>
  </link>

  <link name="right_leg">
    <inertial><mass value="2"/><inertia ixx="0.02" iyy="0.02" izz="0.02"/></inertial>
    <visual>
      <geometry><cylinder length="0.35" radius="0.05"/></geometry>
      <material name="yellow"><color rgba="1 1 0 1"/></material>
    </visual>
    <collision><geometry><cylinder length="0.35" radius="0.05"/></geometry></collision>
  </link>

  <!-- ===================== JOINTS ===================== -->
  <joint name="neck_joint" type="revolute">
    <parent link="base_link"/>
    <child link="head"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1" upper="1" effort="10" velocity="1"/>
  </joint>

  <joint name="left_shoulder_joint" type="revolute">
    <parent link="base_link"/>
    <child link="left_upper_arm"/>
    <origin xyz="0.2 0 0.2" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.5" upper="1.5" effort="15" velocity="1.5"/>
  </joint>

  <joint name="left_elbow_joint" type="revolute">
    <parent link="left_upper_arm"/>
    <child link="left_lower_arm"/>
    <origin xyz="0 0 -0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="1.5" effort="10" velocity="1.0"/>
  </joint>

  <joint name="right_shoulder_joint" type="revolute">
    <parent link="base_link"/>
    <child link="right_upper_arm"/>
    <origin xyz="-0.2 0 0.2" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.5" upper="1.5" effort="15" velocity="1.5"/>
  </joint>

  <joint name="right_elbow_joint" type="revolute">
    <parent link="right_upper_arm"/>
    <child link="right_lower_arm"/>
    <origin xyz="0 0 -0.25" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="1.5" effort="10" velocity="1.0"/>
  </joint>

  <joint name="left_hip_joint" type="revolute">
    <parent link="base_link"/>
    <child link="left_leg"/>
    <origin xyz="0.1 0 -0.25" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.0" upper="1.0" effort="20" velocity="1.0"/>
  </joint>

  <joint name="right_hip_joint" type="revolute">
    <parent link="base_link"/>
    <child link="right_leg"/>
    <origin xyz="-0.1 0 -0.25" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.0" upper="1.0" effort="20" velocity="1.0"/>
  </joint>

  <joint name="knee_joint" type="revolute">
    <parent link="left_leg"/>
    <child link="right_leg"/>
    <origin xyz="0 0 -0.35" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="1.5" effort="20" velocity="1.0"/>
  </joint>

</robot>
